{
  "name": "lingo-challenge-backend",
  "version": "1.0.0",
  "description": "Backend API cho ứng dụng LingoChallenge sử dụng Elysia",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist",
    "start": "bun run dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "elysia": "^1.1.22",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/swagger": "^1.1.4",
    "@elysiajs/jwt": "^1.1.1",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/static": "^1.1.1",
    "drizzle-orm": "^0.33.0",
    "better-sqlite3": "^11.3.0",
    "bcryptjs": "^2.4.3",
    "nanoid": "^5.0.8"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.24.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11"
  },
  "keywords": ["elysia", "typescript", "api", "language-learning"],
  "author": "",
  "license": "MIT"
}